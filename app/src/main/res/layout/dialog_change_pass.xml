<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_background_dialog"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Thay đổi mật khẩu"
        android:gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/custom_background_dialog1"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chú ý khi thay đổi mật khẩu thành công, hãy đăng nhập lại bằng mật khẩu mới để kiểm tra mật khẩu vừa đổi."
        android:textColor="@color/black"
        android:textSize="14sp"
        android:lineSpacingExtra="5sp"
        android:gravity="center"
        android:padding="8dp"/>

    <EditText
        android:id="@+id/edt_pass_old"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@drawable/edt"
        android:textSize="14sp"
        android:inputType="textPassword"
        android:hint="Mật khẩu hiện tại"
        android:drawablePadding="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:padding="8dp" />

    <EditText
        android:id="@+id/edt_new"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@drawable/edt"
        android:textSize="14sp"
        android:drawablePadding="8dp"
        android:inputType="textPassword"
        android:hint="Mật khẩu mới"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:padding="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_huy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@drawable/btn_red"
            android:alpha="0.4"
            android:layout_marginEnd="8dp"
            android:text="Hủy"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_gui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_marginStart="8dp"
            android:background="@drawable/btn_red"
            android:text="Gửi"/>
    </LinearLayout>
</LinearLayout>